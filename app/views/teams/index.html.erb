<h3> Teams' list </h3>
<table>

  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Url</th>
    <th>Show</th>
  </tr>

  <% @teams.each do |team| %>
    <tr>
      <td><%= team.id %></td>
      <td><%= team.name %></td>
      <td><%= link_to 'Json', team_path(team, :format => 'json') %></td>
      <td><%= link_to 'Show', team %></td>
    </tr>
  <% end %>

</table>
